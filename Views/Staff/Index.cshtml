@model IEnumerable<Certitrack.Models.Staff>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Current = "StaffIndex";
}

<section class="content-header">
    <h1>
        Staff
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="/"><i class="fa fa-tachometer-alt"></i> Dashboard</a>
        </li>
        <li class="active">Staff</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Manage Staff</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body pad table-responsive">
                    <table id="main-table-staff" class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Created)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StaffLink.StaffType.Type)
                                </th>
                                <th>
                                    Role
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Created)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StaffLink.StaffType.Type)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StaffLink.Role.Title)
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn">
                                            <i class="fas fa-user-edit text-primary" data-toggle="tooltip" data-placement="left" title="Edit"></i>
                                            <span class="sr-only">Edit</span>
                                        </a>
                                        <button id="delete-@item.Id"
                                                data-staff-id="@item.Id"
                                                data-message="@item.Name"
                                                data-url="@Url.Action("Delete", "Staff")"
                                                onclick="deleteUser('@item.Name')"
                                                class="btn" style="background-color: transparent">
                                            <i class="fas fa-trash text-red" data-toggle="tooltip" data-placement="left" title="Delete"></i>
                                            <span class="sr-only">Delete</span>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
