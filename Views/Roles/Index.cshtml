@model IEnumerable<Certitrack.Models.Role>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Current = "RolesIndex";
}

<section class="content-header">
    <h1>
        Roles
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="/"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
        </li>
        <li class="active">Roles
    </ol>
</section>
<!-- / .content-header -->
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Manage Roles</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body pad table-responsive">
                    <table id="main-table-role" class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => role.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => role.Description)
                                </td>
                                <!-- buttons -->
                                <td class="text-center">
                                    @Html.AntiForgeryToken()
                                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn">
                                        <i class="fas fa-edit text-primary" data-toggle="tooltip" data-placement="left" title="Edit"></i>
                                        <span class="sr-only">Edit</span>
                                    </a>
                                    <button id="delete-@role.Id"
                                            data-staff-id="@role.Id"
                                            data-url="@Url.Action("Delete", "Roles")"
                                            onclick="deleteUser('the @role.Title role')"
                                            class="btn" style="background-color: transparent">
                                        <i class="fas fa-trash text-red" data-toggle="tooltip" data-placement="left" title="Delete"></i>
                                        <span class="sr-only">Delete</span>
                                    </button>
                                </td>
                                <!-- / buttons -->
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>