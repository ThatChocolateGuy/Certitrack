                    <i class="fa fa-link"></i>
                    <span>Manage Certificates</span>
                </a>
            </li>
            <li class="@(ViewBag.Current == "CertificateCreate" ? "active" : "")">
                <a href="@Url.Action("Create", "Certificates")">
                    <i class="fa fa-link"></i>
                    <span>Issue Certificate</span>
                </a>
            </li>
        </ul>
    </li>
    <!-- / Certificate Treeview -->
    <!-- Customer Treeview -->
    <li class="treeview @(ViewBag.Current == "CustomerIndex"
        || ViewBag.Current == "CustomerCreate"
        || ViewBag.Current == "CustomerEdit"
        || ViewBag.Current == "CustomerDetails"? "active" : "")">
