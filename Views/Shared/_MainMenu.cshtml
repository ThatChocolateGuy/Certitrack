                </a>
            </li>
            <li class="@(ViewBag.Current == "CustomerCreate" ? "active" : "")">
                <a href="@Url.Action("Create", "Customers")">
                    <i class="fa fa-link"></i>
                    <span>Register Customer</span>
                </a>
            </li>
        </ul>
    </li>
